# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRE="7d"

# Server
PORT=3001
NODE_ENV=production

# Meta WhatsApp (optional - for WhatsApp integration)
META_ACCESS_TOKEN=""
META_PHONE_NUMBER_ID=""
META_WEBHOOK_VERIFY_TOKEN=""

# OpenAI API (required for AI chat features)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Redis (optional - for caching)
REDIS_URL="redis://localhost:6379"

# Cloud Storage (optional - defaults to local filesystem)
# Set USE_CLOUD_STORAGE=true to enable cloud storage (Cloudflare R2, AWS S3, etc.)
USE_CLOUD_STORAGE=false
STORAGE_ENDPOINT="https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com"  # For Cloudflare R2
# STORAGE_ENDPOINT=""  # Leave empty for AWS S3
STORAGE_REGION="auto"  # "auto" for Cloudflare R2, or AWS region like "us-east-1"
STORAGE_BUCKET="twins-assistant"
STORAGE_ACCESS_KEY=""
STORAGE_SECRET_KEY=""
STORAGE_PUBLIC_URL="https://your-public-url.com"  # Public URL for accessing files
